<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="10dp"
    tools:context=".CadastroActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/prosaepoesia"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_entre_em_seu_perfil"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/campologin"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:hint="@string/login_usuario"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/camposenha"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:hint="@string/login_senha"
            android:padding="5dp"/>

        <Button
            android:id="@+id/botaologin"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="@string/login_entrar"
            android:padding="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_ou_entre_com" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/blgoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/noColor"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableLeft="@mipmap/ic_google_round"
                android:drawableStart="@mipmap/ic_google_round" />

            <Button
                android:id="@+id/blfacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/noColor"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableLeft="@mipmap/ic_facebook"
                android:drawableStart="@mipmap/ic_facebook" />

            <Button
                android:id="@+id/bltwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/noColor"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:drawableLeft="@mipmap/ic_twitter"
                android:drawableStart="@mipmap/ic_twitter" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_n_o_tem_uma_conta" />

        <Button
            android:id="@+id/botaocadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/noColor"
            android:text="@string/login_registre_se"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>